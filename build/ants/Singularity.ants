Bootstrap : shub
From : APPIAN-PET/APPIAN:base

%post

mkdir /opt/ANTs /opt/ANTs/build/ 
cd /opt/ANTs 
git clone https://github.com/stnava/ANTs.git 
cd /opt/ANTs/build 
cmake ../ANTs/ 
cmake -D ITK_BUILD_MINC_SUPPORT=ON ../ANTs/ 
make  
cp -r bin/* /opt/bin 
cp ../ANTs/Scripts/* /opt/bin/ 
rm -rf /opt/ANTs

